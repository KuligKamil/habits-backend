fragment userFields on User {
  login
  avatarUrl
  repositories {
    totalCount
  }
  url
  contributionsCollection(from: "2023-05-01T01:01:00", to: "2023-05-30T01:01:00") {
    contributionCalendar {
      totalContributions
    }
  }
}

{
  rateLimit {
    limit
    cost
    remaining
    resetAt
    used
    nodeCount
  }
  viewer {
    login
    followers(first: 15) {
      totalCount
      fans: nodes {
        ...userFields
        followers(first: 30) {
          totalCount
        }
      }
    }
  }
  kamil: user(login: "KuligKamil") {
    ...userFields
  }
  sinem: user(login: "sinem-ay") {
    ...userFields
  }
}